from telethon import TelegramClient, events

# معرّف المستخدم المسموح له
AUTHORIZED_USER = 6806412130

@client.on(events.NewMessage(pattern="Clerk$"))
async def clerk_meaning(event):
    "Sends the meaning of the word 'Clerk'."
    if event.sender_id == AUTHORIZED_USER:
        await event.reply("كاتب")
