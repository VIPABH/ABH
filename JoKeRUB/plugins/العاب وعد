import asyncio
from JoKeRUB import l313l
from telethon import events
from JoKeRUB import l313l
from ..core.managers import edit_or_reply

plugin_category = "extra"

word_meanings = {
    "teacher": "مدرس",
    "live": "حياة",
    "book": "كتاب",
    "school": "مدرسة",
    "car": "سيارة",
    "computer": "كمبيوتر",
    "love": "حب",
    "friend": "صديق",
    # يمكنك إضافة المزيد من الكلمات هنا...
}

@l313l.ar_cmd(pattern="العب")
async def start_game(event):
    await event.reply("انقليزي")

    @l313l.ar_cmd(pattern="معنى ↢ \((.*)\)")
    async def handle_meaning(event):
        word = event.pattern_match.group(1).strip().lower()

        meaning = word_meanings.get(word)
        
        if meaning:
            await event.reply(meaning) 
        else:
            await event.reply("لا يوجد معنى لهذا الكلمة.") 
